# ============================================
# ALCHEMY PLATFORM - Environment Variables
# ============================================

# --------------------------------------------
# Database (Local Development - Docker)
# --------------------------------------------
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/alchemy_platform?schema=public"
DIRECT_URL="postgresql://postgres:postgres@localhost:5432/alchemy_platform?schema=public"

# --------------------------------------------
# Supabase (Authentication & Storage)
# --------------------------------------------
# For local development, you can use Supabase CLI or a hosted project
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# --------------------------------------------
# Redis (Upstash for production, local Docker for dev)
# --------------------------------------------
REDIS_URL=redis://localhost:6379
# REDIS_URL=your_upstash_redis_url (for production)
# REDIS_TOKEN=your_upstash_token (for production)

# --------------------------------------------
# AI APIs
# --------------------------------------------
ANTHROPIC_API_KEY=your_claude_api_key
OPENAI_API_KEY=your_openai_api_key
ELEVENLABS_API_KEY=your_elevenlabs_key

# --------------------------------------------
# Content Discovery & Research
# --------------------------------------------
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_secret
YOUTUBE_API_KEY=your_youtube_api_key
TWITTER_BEARER_TOKEN=your_twitter_api_v2_token
FIRECRAWL_API_KEY=your_firecrawl_api_key

# --------------------------------------------
# Publishing Platforms
# --------------------------------------------
SANITY_PROJECT_ID=your_sanity_project_id
SANITY_API_TOKEN=your_sanity_api_token
SANITY_DATASET=production

# --------------------------------------------
# Application Settings
# --------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
