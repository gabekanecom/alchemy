# ============================================
# ALCHEMY PLATFORM - Environment Variables
# ============================================

# --------------------------------------------
# Database (Local Development - Docker)
# --------------------------------------------
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/alchemy_platform?schema=public"
DIRECT_URL="postgresql://postgres:postgres@localhost:5432/alchemy_platform?schema=public"

# --------------------------------------------
# Supabase (Authentication & Storage)
# --------------------------------------------
# For local development, you can use Supabase CLI or a hosted project
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# --------------------------------------------
# Redis (Upstash for production, local Docker for dev)
# --------------------------------------------
REDIS_URL=redis://localhost:6379
# REDIS_URL=your_upstash_redis_url (for production)
# REDIS_TOKEN=your_upstash_token (for production)

# --------------------------------------------
# AI APIs
# --------------------------------------------
ANTHROPIC_API_KEY=your_claude_api_key
OPENAI_API_KEY=your_openai_api_key
ELEVENLABS_API_KEY=your_elevenlabs_key

# --------------------------------------------
# Content Discovery & Research
# --------------------------------------------

# Reddit Discovery
# Get credentials from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=alchemy_platform/1.0
REDDIT_USERNAME=your_reddit_username  # Optional - for authenticated requests
REDDIT_PASSWORD=your_reddit_password  # Optional - for authenticated requests

# YouTube Discovery
# Get API key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key

# Twitter/X Discovery
# Get bearer token from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# SEO Discovery (Optional - uses intelligent simulation if not configured)
# Get credentials from: https://dataforseo.com/
DATAFORSEO_LOGIN=your_dataforseo_login
DATAFORSEO_PASSWORD=your_dataforseo_password

# Firecrawl Web Scraping (For Quora discovery + competitor blogs)
# Get API key from: https://firecrawl.dev/
FIRECRAWL_API_KEY=your_firecrawl_api_key

# --------------------------------------------
# Publishing Platforms
# --------------------------------------------
SANITY_PROJECT_ID=your_sanity_project_id
SANITY_API_TOKEN=your_sanity_api_token
SANITY_DATASET=production

# --------------------------------------------
# Application Settings
# --------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
